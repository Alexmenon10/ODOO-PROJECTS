<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="approval_travel_wizard_view_form" model="ir.ui.view">
        <field name="name">approval.travel.wizard.form</field>
        <field name="model">approval.travel.wizard</field>
        <field name="arch" type="xml">
            <form string="Approval Travel">
                <group class="oe_title">
                    <field name="source"/>
                    <field name="distination"/>
                    <field name="travel_date" readonly="1"/>
                </group>
                <footer>
                    <button string="SUBMIT" icon="fa-gear" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_approval_travel_wizard_view" model="ir.actions.act_window">
        <field name="name">Approval Travel Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.travel.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'record_id' : active_id}</field>
        <field name="target">new</field>
    </record>


    <!--Vehicle Details-->


    <!-- Form view for Vehicle Type -->
   <record id='vehicle_type_form' model='ir.ui.view'>
        <field name="name">vehicle.type.form</field>
        <field name="model">vehicle.type</field>
        <field name="arch" type="xml">
            <form string="Vehicle Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="product" domain="[('can_be_expensed', '=', True)]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for Vehicle Type -->
    <record id="vehicle_type_tree" model='ir.ui.view'>
        <field name="name">vehicle.type.tree</field>
        <field name="model">vehicle.type</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Action for Vehicle Type -->
    <record id="vehicle_type_action" model="ir.actions.act_window">
        <field name="name">Sub Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vehicle.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Invite Your Sub Prodcut....!!!</p>
        </field>
    </record>

    <menuitem action="vehicle_type_action"
              id="vehicle_type"
              name="Sub Product"
              parent="hr_expense.menu_hr_expense_configuration"
              sequence="100"/>
</odoo>