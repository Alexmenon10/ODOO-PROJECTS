<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record id="driver_beta_sheet_sequence" model="ir.sequence">
            <field name="name">Driver Beta Sheet</field>
            <field name="code">driver.beta.sheet</field>
            <field name="prefix">ATLAS/D-BETA/22-23/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="view_driver_beta_sheet_form" model="ir.ui.view">
            <field name="name">driver.beta.sheet.form</field>
            <field name="model">driver.beta.sheet</field>
            <field name="arch" type="xml">
                <form string="Driver Beta Sheet">
                    <header>
                        <button name="get_driver_beta_expense" string="Create Expense" type="object" class="oe_highlight"
                                attrs="{'invisible': [('enable_expense_beta_sheet','==', True)]}"/>
                        <button name="driver_beta_approve" string="Approve" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="driver_beta_cancel" string="Cancel" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="driver_beta_reject" string="Reject" type="object" class="oe_highlight"
                                states="draft"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approve,reject,cancel,"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="expense_beta_sheet_list"
                                    class="oe_stat_info"
                                    icon="fa-wrench"
                                    type="object"
                                    attrs="{'invisible': [('my_expense_beta_count','==', 0)]}"
                            >
                                <field name="my_expense_beta_count" widget="statinfo"
                                       options="{'reload_on_button': true}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <!--                                <label for="name" string="Reference"/>-->
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group string="Driver Beta Sheet">
                            <group>
                                <field name="driver_name" required="1" force_save="1"/>
                                <field name="enable_expense_beta_sheet" invisible="1"/>
                                <field name="Id_no"/>
                                <field name="today_date"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="working_time" readonly="1"/>
                                <field name="beta_sheet_type"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Shedule Trip Infromation">
                                <field name="driver_beta_detail_ids">
                                    <tree editable="bottom" create="1" delete="0">
                                        <field name="ref_name"/>
                                        <field name="reference"/>
                                        <field name="vehicle_name"/>
                                        <field name="unit_from"/>
                                        <field name="out_time"/>
                                        <field name="opening_km"/>
                                        <field name="out_verified_by"/>
                                        <field name="unit_to"/>
                                        <field name="in_time"/>
                                        <field name="closing_km"/>
                                        <field name="in_verified_by"/>
                                        <field name="duration"/>
                                        <field name="total_kilometer"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="total_working_time" attrs="{'invisible': [('beta_sheet_type','==', 'km_base')]}"/>
                            <field name="total_working_distance" attrs="{'invisible': [('beta_sheet_type','==', 'time_base')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_driver_beta_sheet_tree" model="ir.ui.view">
            <field name="name">driver.beta.sheet.tree</field>
            <field name="model">driver.beta.sheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="driver_name" placeholder="Eddie Brown"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="vehicle"/>
                    <field name="location"/>
                    <field name="front_office" optional="hide"/>
                    <field name="Id_no" optional="hide"/>
                    <field name="today_date" optional="hide"/>
                    <field name="admin_name" optional="hide"/>
                    <field name="department_sign" optional="hide"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id='action_driver_beta_sheet_indent' model='ir.actions.act_window'>
            <field name="name">Driver Beta Sheet</field>
            <field name="res_model">driver.beta.sheet</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_working_time' : 8}</field>
        </record>


        <record id="view_driver_status_tracking_tree" model="ir.ui.view">
            <field name="name">driver.tracking.status.tree</field>
            <field name="model">driver.tracking.status</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="driver_name"/>
                    <field name="driver_id"/>
                    <field name="driver_department"/>
                    <field name="driver_job_id"/>
                    <field name="driver_state"/>
                    <field name="driver_position"/>
                    <field name="curnt_status"/>
                    <button icon='fa-eye' name="driver_tracking" string="Track Driver" type="object"/>
                    <button icon='fa-eye' name="driver_history" string="Driver History" type="object"/>
                </tree>
            </field>
        </record>

        <record id="driver_status_tracking_action" model="ir.actions.act_window">
            <field name="name">Driver Tracking Status</field>
            <field name="res_model">driver.tracking.status</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Driver Status Tracking
                </p>
            </field>
        </record>

        <menuitem id="menu_driver_status_tracking" name="Driver Tracking"
                  parent="appscomp_fleet.employee_fleet_menu" sequence="2"
                  action="driver_status_tracking_action"/>


        <record id="view_vehicle_status_tracking_tree" model="ir.ui.view">
            <field name="name">vehicle.tracking.status.tree</field>
            <field name="model">vehicle.tracking.status</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="vehicle_name"/>
                    <field name="vehicle_state"/>
                    <field name="vehicle_position"/>
                    <button icon='fa-eye' name="vehicle_tracking" string="Track Vehicle" type="object"/>
                    <button icon='fa-eye' name="vehicle_history" string="Vehicle History" type="object"/>
                </tree>
            </field>
        </record>

        <record id="vehicle_status_tracking_action" model="ir.actions.act_window">
            <field name="name">Vehicle Tracking Status</field>
            <field name="res_model">vehicle.tracking.status</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Driver Status Tracking
                </p>
            </field>
        </record>

        <menuitem id="menu_vehicle_status_tracking" name="Vehicle Tracking"
                  parent="appscomp_fleet.employee_fleet_menu" sequence="3"
                  action="vehicle_status_tracking_action"/>
    </data>
</odoo>