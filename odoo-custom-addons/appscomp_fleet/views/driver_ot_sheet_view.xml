        <record id="view_ot_department_config_form" model="ir.ui.view">
            <field name="name">ot.department.config.form</field>
            <field name="model">ot.department.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="ho_department"/>
                                <field name="approximate_time_delay_mrng" placeholder="00:00:00"/>
                                <field name="approximate_time_delay_eve" placeholder="00:00:00"/>
                            </group>
                            <group>
                                <field name="work_start_time" placeholder="00:00:00"/>
                                <field name="work_end_time" placeholder="00:00:00"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="OT Time and Amount Info">
                            <h2 style="color:#714B67">
                                <lable>OT Configuration (Morning)</lable>
                            </h2>
                                <field name="department_ot_detail_ids">
                                    <tree editable="bottom" create="1" delete="1">
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="ot_amount"/>
                                    </tree>
                                </field>

                            <h2 style="color:#3C73E8">
                                <lable>OT Configuration (Evening)</lable>
                            </h2>
                                <field name="department_ot_detail_two_ids">
                                    <tree editable="bottom" create="1" delete="1">
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="ot_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Holiday OT Info">
                            <h2 style="color:#28666B">
                                <lable>OT Configuration (Holidays)</lable>
                            </h2>
                                <group>
                                    <group>
                                        <field name="holiday_ot_amount_one"/>
                                        <field name="holiday_ot_amount_two"/>
                                        <field name="holiday_ot_amount_three"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="department_ot_detail_holiday_ids">
                                    <tree editable="bottom" create="1" delete="1">
                                        <field name="holiday_date"/>
                                        <field name="holiday_name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ot_department_config_tree" model="ir.ui.view">
            <field name="name">ot.department.config.tree</field>
            <field name="model">ot.department.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ho_department"/>
                </tree>
            </field>
        </record>

        <record id='action_driver_ot_sheet_indent' model='ir.actions.act_window'>
            <field name="name">OT Department Config</field>
            <field name="res_model">ot.department.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        Driver Beta Sheet-->
        <menuitem name="OT Departent Config" id="menu_ot_department_config_sheet" action="action_driver_ot_sheet_indent"
                  parent="fleet.fleet_configuration" sequence="50"/>

