<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fleet_multiple_assign_vehicle" model="ir.sequence">
            <field name="name">Fleet Multiple Assign Vehicle</field>
            <field name="code">fleet.multiple.assign.vehicle</field>
            <field name="prefix">ATLAS/M-APPROVAL/22-23/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="fleet_multiple_assign_vehicle_form_view" model="ir.ui.view">
            <field name="name">fleet.multiple.assign.vehicle.form</field>
            <field name="model">fleet.multiple.assign.vehicle</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <header>
                        <button string="Schedule The Trip" type="object" name="fleet_multiple_assign_vehicle"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="o_not_full oe_button_box" position="inside">
                            <button name="multi_approval_driver_history_record"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object"
                                    attrs=" {'invisible': [('multi_approval_driver_history_count','==',0)]}">
                                <field name="multi_approval_driver_history_count" widget="statinfo"
                                       options="{'reload_on_button': true}"/>
                            </button>
                            <button name="multi_approval_vehicle_history_record"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object"
                                    attrs=" {'invisible': [('multi_approval_vehicle_history_count','==',0)]}">
                                <field name="multi_approval_vehicle_history_count" widget="statinfo"
                                       options="{'reload_on_button': true}"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="approval_ids"
                                       widget="many2many_tags"
                                       options="{ 'no_create':True, 'no_create_edit':True }"
                                       required="1"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"/>
                                <field name="vehicle_category" required="1"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"/>
                                <field name="model_id" options="{ 'no_create':True, 'no_create_edit':True }"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"
                                       required="1"/>
                                <field name="vechicle_list" options="{ 'no_create':True, 'no_create_edit':True }"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"
                                       required="1"/>
                            </group>
                            <group>
                                <field name="vehicle_driver" options="{ 'no_create':True, 'no_create_edit':True }"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"/>
                                <field name="person_list"
                                       attrs="{'readonly': [('state', '=', 'assign')]}"/>
                                <field name="pass_status_gate" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="trip_details_id"
                                       attrs="{'readonly': [('state', '=', 'assign')]}" nolabel="0"
                                       widget="section_and_note_one2many"
                                       mode="tree,kanban">
                                    <tree editable="bottom" create="1" delete="0">
                                        <control>
                                            <create name="add_line_control" string="Add a line"/>
                                            <create name="add_section_control" string="Add a section"
                                                    context="{'default_display_type': 'line_section'}"/>
                                            <create name="add_note_control" string="Add a note"
                                                    context="{'default_display_type': 'line_note'}"/>
                                        </control>
                                        <field name="display_type" invisible="1" readonly="1"/>
                                        <field name="name" widget="section_and_note_text" readonly="1" force_save="1"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="travel_from"/>
                                        <field name="travel_to"/>
                                        <field name="duration"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fleet_multiple_assign_vehicle_tree_view" model="ir.ui.view">
            <field name="name">fleet.multiple.assign.vehicle.tree</field>
            <field name="model">fleet.multiple.assign.vehicle</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
