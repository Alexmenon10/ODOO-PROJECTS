<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="two_wheeler_vehicle_info_sequence" model="ir.sequence">
            <field name="name">Two Wheeler Vehicle Information</field>
            <field name="code">two.wheeler.usage</field>
            <field name="prefix">ATLAS/TWVI/22-23/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="view_vehicle_form" model="ir.ui.view">
            <field name="name">two.wheeler.usage.form</field>
            <field name="model">two.wheeler.usage</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name="driver_beta_approve" string="Approve" type="object" class="oe_highlight"-->
<!--                                states="draft"/>-->
<!--                        <button name="driver_beta_cancel" string="Cancel" type="object" class="oe_highlight"-->
<!--                                states="draft"/>-->
<!--                        <button name="driver_beta_reject" string="Reject" type="object" class="oe_highlight"-->
<!--                                states="draft"/>-->
<!--                        <field name="state" widget="statusbar"-->
<!--                               statusbar_visible="draft,approve,reject,cancel,"-->
<!--                               statusbar_colors='{"reject":"red"}'/>-->
<!--                    </header>-->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <!--                                <label for="name" string="Reference"/>-->
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group string="Vehicle Information">
                            <group>
<!--                                <field name="vehicle_request_id"/>-->
                                <field name="time_out"/>
                                <field name="opening_km"/>
                                <field name="net_km"/>
                                <field name="employee_sign" widget="signature" options="{'verticle':True}"/>
                            </group>
                            <group>
                                <field name="taken_by"/>
                                <field name="time_in"/>
                                <field name="closing_km"/>
                                <field name="place"/>
                                <field name="approved"/>
                                <field name="security_sign" widget="signature" options="{'verticle':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vehicle_tree" model="ir.ui.view">
            <field name="name">two.wheeler.usage.tree</field>
            <field name="model">two.wheeler.usage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="taken_by"/>
                    <field name="time_out"/>
                    <field name="time_in"/>
                    <field name="opening_km"/>
                    <field name="closing_km"/>
                    <field name="net_km"/>
                    <field name="place" optional="hide"/>
                    <field name="employee_sign" optional="hide"/>
                    <field name="security_sign" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="vehicle_details_action" model="ir.actions.act_window">
            <field name="name">Two Wheeler Vehicle Information</field>
            <field name="res_model">two.wheeler.usage</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
