     <record model="ir.ui.view" id="ho_department_form_view">
            <field name="name">ho.department.form</field>
            <field name="model">ho.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
     </record>

    <!-- Actions panel -->
        <record model="ir.actions.act_window" id="gate_entry.action_ho_department">
            <field name="name">Ho Department</field>
            <field name="res_model">ho.department</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Ho Department
                </p>
            </field>
        </record>
        <menuitem name="Ho Department" id="gate_entry.menu_ho_depatment" parent="inventory_base.menu_product_group_root"
                  action="gate_entry.action_ho_department" sequence="10"/>

