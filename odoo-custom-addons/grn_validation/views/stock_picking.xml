<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_inherit20819" model="ir.ui.view">
            <field name="name">stock.picking.form.20819</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="id" position="after">
                    <field name="z_show_supplier" invisible="1"/>
                </field>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="after">
                    <field name="z_supplier_rate" attrs="{'column_invisible': [('parent.z_show_supplier', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom']" position="attributes">
                <attribute name="string">UOM</attribute>
            </xpath>
            </field>
        </record>
    </data>
</odoo>