<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="expense_report_wizard_form" model="ir.ui.view">
            <field name="name">expense.report.wizard.form</field>
            <field name="model">expense.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Expense Summary Report">
                    <group attrs="{'invisible':[('report_printed','=',True)]}">
                        <group>
                        <field name="start_date" force_save="1" attrs="{'invisible':[('week_boolean','=',True)] , 'required':[('approved_records','=',True)]}"/>
                            <field name="end_date" force_save="1" attrs="{'invisible':[('week_boolean','=',True)] , 'required':[('approved_records','=',True)]}"/>
                                <field name="current_week_days" force_save="1" readonly="1"/>
                             <field name="week_days" force_save="1" readonly="1"
                                   attrs="{'invisible':[('week_boolean','=',False)]}"/>
                        </group>
                        <group>
                            <field name="approved_records" />
                            <field name="week_boolean" />
                        </group>

                    </group>
                    <group>
                        <field name="report_printed" invisible="1"/>
                        <group attrs="{'invisible':[('report_printed','=',False)]}">
                            <field name="file_name" invisible="1"/>
                            <field name="summary_file" readonly="1" filename="file_name"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Download' name="action_get_hr_payroll_excel_report"
                                type="object" class="oe_highlight" icon="fa-download"
                                attrs="{'invisible':[('report_printed','=',True)]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_expense_report_wizard" model="ir.actions.act_window">
            <field name="name">Expense Excel Report</field>
            <field name="res_model">expense.report.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="expense_report_wizard_form"/>
            <field name="target">new</field>
        </record>


        <menuitem action="action_expense_report_wizard" id="menu_expense_report_wizard"
                  name="Expense Summary Report"
                  parent="hr_expense.menu_hr_expense_reports" sequence="4"/>
    </data>
</odoo>
