                    </field>
                </field>
            </field>
        </record>


        <!-- Stock Moves Product Groups -->
        <record id="view_move_tree_inherit_product_groups" model="ir.ui.view">
            <field name="name">view_move_tree_inherit_product_groups</field>
            <field name="model">stock.move</field>
