        <!-- Inventory Report Product Groups -->
        <record id="view_stock_quant_tree_editable_inherit_product_groups" model="ir.ui.view">
            <field name="name">view_stock_quant_tree_editable_inherit_product_groups</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="product_category_id" readonly="1">
                        <form>
                        </form>
                    </field>
                    <field name="item_group" readonly="1" invisible='1'>
                        <form>
                        </form>
                    </field>
                    <field name="product_group_1" readonly="1" invisible='1'>
                        <form>
                        </form>
                    </field>
                    <field name="product_group_2" readonly="1" invisible='1'>
