                </xpath>


                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="section_id" optional="hide"/>
                </xpath>

                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="division_id" optional="hide"/>

                </xpath>
                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="floor_id" optional="hide"/>
                </xpath>

                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="build_id" optional="hide"/>
                </xpath>

                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="block_id" optional="hide"/>
                </xpath>


                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="codefor"/>
                </xpath>

                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="subcategory_id" optional="hide"/>
                </xpath>


            </field>
        </record>


