                                <!--                                            </td>-->

                                <!--                                            <td>-->
                                <!--                                                <span t-esc="o.maintenance_duration"/>-->
                                <!--                                            </td>-->

                                <!--                                        </tr>-->

                                <!--                                    </tbody>-->
                                <!--                                </table>-->

                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>