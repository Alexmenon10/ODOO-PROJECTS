<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Wizard Form view -->
        <record id="view_merge_purchase_order" model="ir.ui.view">
            <field name="name">merge.purchase.order.form</field>
            <field name="model">merge.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Merge">
                    <group>
                        <group>
                            <field name="date_order"/>
                            <field name="merge_action" widget="radio"/>
                        </group>
                    </group>
	                <footer>
                        <button string='Merge' name="create_merge_po" type="object" class="btn-primary" confirm="Are you sure you want to Merge Records ?"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
	                </footer>
               </form>
            </field>
        </record>
        
        <record id="action_merge_purchase_order" model="ir.actions.act_window">
            <field name="name">Merge</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">merge.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        </record>
    </data>
</odoo>
