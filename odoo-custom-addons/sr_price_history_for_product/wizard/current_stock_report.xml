<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="current_stock_report_wizard_form" model="ir.ui.view">
            <field name="name">current.stock.report.form</field>
            <field name="model">current.stock.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Current Stock Report">
                    <group attrs="{'invisible':[('report_printed','=',True)]}">
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="stock_warehouse" options='{"no_open": False, "no_create": True}' invisible="1"/>
                            <field name="stock_location" widget="many2many_tags" options='{"no_open": False, "no_create": True}'/>
                            <field name="zero_value_entry_boolean"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                            <field name="all_product_list"/>
                            <field name="product_cat" widget="many2many_tags" options='{"no_open": False, "no_create": True}'
                                   attrs="{'invisible':[('all_product_list','=',True)]}"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1" invisible="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <field name="report_printed" invisible="1"/>
                        <group attrs="{'invisible':[('report_printed','=',False)]}">
                            <field name="file_name" invisible="1"/>
                            <field name="summary_file" readonly="1" filename="file_name"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Download' name="action_get_current_stock_report"
                                type="object" class="oe_highlight" icon="fa-download"
                                attrs="{'invisible':[('report_printed','=',True)]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_current_stock_report">
            <field name="name">Current Stock Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">current.stock.report</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="current_stock_report_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_current_stock_report" id="menu_action_current_stock_report"
                  name="Current Stock Report"
                  parent="stock.menu_warehouse_report" sequence="1"/>
    </data>
</odoo>
